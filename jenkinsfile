pipeline {
    agent any

    stages {
        stage('NPM Install') {
            steps {
                bat 'npm install'
            }
        }
        stage('NPM Audit') {
            steps {
                bat 'npm audit'
            }
        }
        stage('Run Integration Tests') {
            steps {
                bat 'npm run test'
            }
        }
         stage('Deploy to production') {
            steps {
                bat 'docker pull boboev/studentapp'
                bat 'docker-compose up -d'
                bat 'curl "https://api.render.com/deploy/srv-cntjt4uct0pc739rjot0?key=GKUyDYWLVbM"'

            }
        }
    }
}